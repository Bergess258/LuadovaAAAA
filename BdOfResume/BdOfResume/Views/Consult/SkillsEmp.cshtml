@model List<BdOfResume.Models.Skill>

@{
    ViewBag.Title = "SkillsEmp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("SkillsEmp", "Consult", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h2>Управление вашими навыками</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => Model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model[0].Sap)
                </th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.Count - 1; ++i)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Name)
                        @Html.HiddenFor(m => Model[i].Name)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => Model[i].Sap)
                    </td>
                    <td>
                        <button type="submit" name="id" value="@Model[i].Id">Удалить</button>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    @Html.TextBoxFor(m => Model[Model.Count - 1].Name)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => Model[Model.Count - 1].Sap)
                </td>
                <td>
                    <button type="submit" id="create" name="create" value="true">Создать</button>
                </td>
            </tr>
        </table>
    </div>
}