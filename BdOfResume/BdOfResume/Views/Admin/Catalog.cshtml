                <button type="button">@Html.ActionLink("Выбрать", "CatalogSelected", "Admin", new { catalogName = "Образования" }, htmlAttributes: new { @style = "text-decoration:none; color:inherit" })</button>
            </td>
        </tr>
        <tr>
            <td>Посты сотрудников</td>
