@model BdOfResume.Models.BdCount
@{
    ViewBag.Title = "Catalog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:60px;">
    <table class="table_price">
        <caption style="white-space:nowrap">Выберите один из справочников</caption>
        <tr>
            <th>Название</th>
            <th>Кол-во записей</th>
            <th colspan="2"></th>
        </tr>
        <tr>
            <td>Департаменты</td>
            <td>@Html.DisplayFor(m => m.DepCount)</td>
            <td>
                <button type="button">@Html.ActionLink("Выбрать", "CatalogSelected", "Admin", routeValues: new { catalogName = "Департаменты" }, htmlAttributes: new { @style = "text-decoration:none; color:inherit" })</button>
            </td>
        </tr>
        <tr>
            <td>Образования</td>
            <td>@Html.DisplayFor(m => m.EduCount)</td>
